# Hive Fleet Obsidian - Environment Configuration Template
# Copy this file to .env and fill in your API keys

# OpenAI API Key (for CrewAI agents)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (optional, for Claude models)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Mission Configuration
HFO_MISSION_ID=multi_crew_parallel_2025-10-30

# Lane Configuration (parallel execution)
HFO_LANE_COUNT=2
HFO_EXPLORE_EXPLOIT_RATIO=0.2  # 2/8 = 0.2 (20% explore, 80% exploit)

# Verification Quorum
HFO_QUORUM_THRESHOLD=2  # out of 3 validators

# Safety Envelope
HFO_CHUNK_SIZE_MAX=200
HFO_PLACEHOLDER_BAN=true

# Blackboard Path
HFO_BLACKBOARD_PATH=hfo_blackboard/obsidian_synapse_blackboard.jsonl

# Telemetry
HFO_EMIT_OTEL=true
HFO_OTEL_FORMAT=json

# Timeouts (minutes)
HFO_LANE_CYCLE_SOFT_MINUTES=5
HFO_MISSION_SOFT_MINUTES=30
