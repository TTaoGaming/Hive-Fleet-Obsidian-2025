# Hive Fleet Obsidian - Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API Key (required for CrewAI default LLM)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Anthropic API Key (for Claude models)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: LangSmith API Key (for tracing/debugging)
# Get your key from: https://smith.langchain.com/
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_TRACING_V2=false

# Mission Configuration
HFO_MISSION_ID=mi_daily_2025-10-30

# Crew Configuration
HFO_CREW_VERBOSE=false
HFO_CREW_MEMORY=true
HFO_PARALLEL_LANES=2

# Safety Configuration
HFO_CHUNK_SIZE_MAX=200
HFO_PLACEHOLDER_BAN=true
