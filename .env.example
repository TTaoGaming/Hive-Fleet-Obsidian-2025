# HFO Multi-Crew Orchestration Environment Variables
# Copy this file to .env and fill in your API keys

# OpenAI API Key for CrewAI agents (GPT-4, etc.)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key (Claude, optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Mission Configuration
HFO_MISSION_ID=mission_2025-10-30
HFO_PARALLEL_LANES=2
HFO_EXPLORE_EXPLOIT_RATIO=8:2

# Safety Configuration
HFO_CHUNK_SIZE_MAX=200
HFO_AUTO_RETRY_MAX=3

# Verification Quorum
HFO_QUORUM_THRESHOLD=2
HFO_QUORUM_VALIDATORS=immunizer,disruptor,verifier_aux

# LLM Configuration
HFO_LLM_MODEL=gpt-4
HFO_LLM_TEMPERATURE=0.7
HFO_LLM_TIMEOUT=60

# Agent Behavior
HFO_AGENT_VERBOSE=false

# Blackboard Path
HFO_BLACKBOARD_PATH=hfo_blackboard/obsidian_synapse_blackboard.jsonl
